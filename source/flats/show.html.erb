<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
</div>

<div class="flat-resume">
  <!-- Access data.flats with owner's name as key -->
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="flat-details">
          <div class="flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle flat-avatar" %>
            <p><%= flat.name %></p>
          </div>
          <div class="flat-caracteristics">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <div class="back-stars">
              <p><% 5.times { %>
                <i class="fa fa-star"></i>
                <% } %>
              </p>
            </div>
            <div class="front-stars">
              <p><% flat.rating.to_i.times { %>
                <i class="fa fa-star" style="color: #FFBC0B"></i>
                <% } %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#">
          <h1>Book this flat</h1>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" id="checkin" placeholder="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" id="checkout" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select id="guest" class="form-control">
              <option>1 guest</option>
              <option>2 guests</option>
              <option>3 guests</option>
            </select>
          </div>
          <div class="form-group">
            <a class="btn btn-primary btn-lg">Book it</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="flat-about">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this flat</h2>
        <p>
          Trop bow ce flat.
        </p>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            The Space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:  <strong>2</strong></li>
              <li>Bathrooms:  <strong>1</strong></li>
              <li>Bed type:  <strong>Real Bed</strong></li>
              <li>Bedrooms:  <strong>1</strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Beds: <strong>1</strong></li>
              <li>Property type: <strong>Apartment</strong></li>
              <li>Room type: <strong>Entire home/apt</strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            Amenities
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fas fa-utensils" style="font-size: 18px"></i><strong> Kitchen</strong></li>
              <li><i class="fas fa-wifi" style="font-size: 18px"></i><strong> Wifi</strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-desktop" style="font-size: 18px"></i><strong>TV</strong></li>
              <li><i class="fas fa-glass-martini" style="font-size: 18px"></i><strong> Welcome drink</strong></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

